<div class="search-bar">
</div>

<div class="main group">
  <div class="sidebar">
    SIDEBAR GOES HERE
  </div>

  <div class="results">
    <% if (jobs.isEmpty()) { %>
      No results found, please try again
    <% } %>
    <ul class='jobs-list'>
    </ul>

    <% if (!jobs.isEmpty() && jobs.numPages > 1) { %>
      <div class="page-nav">
        Results Page:
        <% if (jobs.page !== 1) { %>
          <span class="prev-page">
            <a href="javascript:void(0)">&#171 Previous</a>
          </span>
        <% } %>

        <% for (i = 1; i <= jobs.numPages; i++) { %>
          <% if (i === jobs.page) { %>
            <span><%=i%></span>
          <% } else { %>
            <span class="page-link">
              <a href="javascript:void(0)"><%=i%></a>
            </span>
          <% } %>
        <% } %>

        <% if (jobs.page !== jobs.numPages) { %>
  	      <span class="next-page">
            <a href="javascript:void(0)">Next &#187</a>
          </span>
        <% } %>
      </div>
    <% } %>
  </div>
</div>
