<h2 class="job-title">
  <a href="/#/jobs/<%=job.id%>">
    <%=job.escape('title')%>
  </a>
</h2>

<% if (job.attributes.poster) { %>
  Posted by <%= job.attributes.poster.name %>
  <br>
<% } %>

<div class="job-snippet">
  <%= job.escape('description') %>
</div>

<% if (Indoge.currentUser.isSignedIn() && Indoge.currentUser.id !== job.attributes.poster.id) { %>
  <a href="#" class="save-link">save job</a>
<% } %>
